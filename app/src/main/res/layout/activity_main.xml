<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="left">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:gravity="center"
        android:text="Villes selon la province"
        android:textColor="#F80909"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewprovince"
        android:layout_width="189dp"
        android:layout_height="46dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="128dp"
        android:gravity="center"
        android:text="Provinces:             "
        android:textColor="#F80909"
        android:textSize="15dp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/textViewville"
        android:layout_width="193dp"
        android:layout_height="44dp"
        android:layout_marginLeft="202dp"
        android:layout_marginTop="130dp"
        android:gravity="center"
        android:text="Villes:"
        android:textColor="#F80909"
        android:textSize="15dp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/textViewdrapeau"
        android:layout_width="327dp"
        android:layout_height="42dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="310dp"
        android:gravity="center"
        android:text="Drapeau de la province choisie"
        android:textColor="#F80909"
        android:textSize="15dp"
        android:textStyle="normal"
        android:typeface="sans"
        android:visibility="visible"
        app:drawableTint="#F4F4F4" />


    <TextView
        android:id="@+id/textVilles"
        android:layout_width="154dp"
        android:layout_height="91dp"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="179dp"
        android:background="@drawable/cadre"
        android:gravity="center"
        android:text="Les villes"
        android:textColor="#000000"
        android:textSize="15dp"
        android:textStyle="bold"
        app:drawableTint="#F4F4F4" />

    <Spinner
        android:id="@+id/spinnerProvince"
        android:layout_width="160dp"
        android:layout_height="93dp"
        android:layout_below="@+id/textView"
        android:layout_marginStart="23dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="23dp"
        android:backgroundTintMode="add"
        android:entries="@array/province_array"
        android:popupBackground="@drawable/cadre2"
        android:spinnerMode="dropdown" />



    <ImageView
        android:id="@+id/imagdrapeau"
        android:layout_width="310dp"
        android:layout_height="178dp"
        android:layout_below="@+id/spinnerProvince"
        android:layout_alignLeft="@+id/spinnerProvince"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="71dp"
        android:gravity="right"
        app:srcCompat="@drawable/quebec" />



</RelativeLayout>
